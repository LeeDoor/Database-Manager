<Window x:Class="Database_Manager.View.CreateDbWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_Manager"
        mc:Ignorable="d"
        Title="CreateDbWindow" Height="200" Width="400">
    <Grid>
        <StackPanel Width="200" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!--<TextBlock HorizontalAlignment="Center" Text="enter database name:"/>
            <TextBox Name="DbNameText" Text="{Binding DbName}"/>-->
            <TextBlock HorizontalAlignment="Center" Text="enter connection line:"/>
            <TextBox Name="ConnectionLineText" Text="{Binding ConnectionString}"/>
            <Button Click="OnClickGetData" Content="create and connect"/>
        </StackPanel>
    </Grid>
</Window>
