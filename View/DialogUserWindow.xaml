<Window x:Class="Database_Manager.DialogUserWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Database_Manager"
		xmlns:vm="clr-namespace:Database_Manager.ViewModel"
		mc:Ignorable="d"
		Title="CreateUserWindow" Height="200" Width="300" Background="#250938">

    <Grid>
		<StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150">
			<TextBox>name</TextBox>
			<TextBlock Text="{Binding Name}" Style="{DynamicResource TextBlockStyle1}" Margin="0, 0, 0, 10"/>
			<TextBox>phone</TextBox>
			<TextBlock Text="{Binding Phone}" Style="{DynamicResource TextBlockStyle1}"/>
			<Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button FontSize="10" Grid.Column="0" Margin="0, 3, 3, 0" Height="20" Style="{DynamicResource ButtonStyleAdd}" Content="Cancel"></Button>
                <Button FontSize="10" Grid.Column="1" Margin="3, 3, 0, 0" Height="20" Style="{DynamicResource ButtonStyleAdd}" Content="Apply"></Button>
			</Grid>
		</StackPanel>
	</Grid>
</Window>
